<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_replies"
        style="@style/pinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="12dp"
        android:text="REPLIES"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txt_media"
        app:layout_constraintHorizontal_bias="0.252"
        app:layout_constraintStart_toEndOf="@+id/txt_tweets"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_tweets"
        style="@style/pinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:text="TWEETS"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_replies" />

    <TextView
        android:id="@+id/isi_tweets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="1200"
        app:layout_constraintEnd_toEndOf="@+id/txt_tweets"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="@+id/txt_tweets"
        app:layout_constraintTop_toBottomOf="@+id/txt_tweets" />

    <TextView
        android:id="@+id/isi_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="2500"
        app:layout_constraintEnd_toEndOf="@+id/txt_replies"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/txt_replies"
        app:layout_constraintTop_toBottomOf="@+id/txt_replies" />

    <TextView
        android:id="@+id/isi_media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="176"
        app:layout_constraintEnd_toEndOf="@+id/txt_media"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="@+id/txt_media"
        app:layout_constraintTop_toBottomOf="@+id/txt_media" />

    <TextView
        android:id="@+id/txt_media"
        style="@style/pinkText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="64dp"
        android:text="MEDIA"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_replies" />

</androidx.constraintlayout.widget.ConstraintLayout>